.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
}
.model {
  position: fixed;
  left: 50%;
  top: 40%;
  z-index: 999;
  -webkit-transform: translateX(-50%) translateY(-40%);
          transform: translateX(-50%) translateY(-40%);
  width: 488rpx;
  background: #ffffff;
  border-radius: 10rpx;
}
.model .title {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx;
}
.model .content {
  margin-left: 20rpx;
  width: 448rpx;
  height: 56rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 35rpx;
  position: relative;
  font-size: 24rpx;
}
.model .content .selPicker {
  display: inline-block;
  height: 100%;
  width: 100%;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}
.model .content image {
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  width: 24rpx;
  height: 24rpx;
}
.model .operation {
  height: 80rpx;
  width: 100%;
  border-top: 2rpx solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.model .operation view {
  flex: 1;
  font-size: 32rpx;
  text-align: center;
}
.model .operation .cancel {
  color: #999999;
}
.model .operation .confirm {
  color: #FF2D2D;
}


.collNum {
  width: 750rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding-left: 30rpx;
  background: #ffffff;
  color: #333;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.collNum text {
  color: #FF0000;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.shopHeader {
  width: 750rpx;
  height: 68rpx;
  background: #ffffff;
  padding: 20rpx 50rpx 20rpx 30rpx;
}
.shopHeader .shopName {
  font-size: 28rpx;
  color: #333;
}
.shopHeader .shopMore {
  width: 28rpx;
  height: 28rpx;
}
.goods {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  -webkit-transform: translateX(0);
          transform: translateX(0);
}
.goodsContent {
  padding: 0 30rpx 40rpx;
  width: 750rpx;
  flex-shrink: 0;
}
.shopGoods {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.shopGoods .goodsImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.shopGoods .goodsInfo {
  width: 418rpx;
}
.shopGoods .goodsInfo .goodsName {
  width: 420rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
}
.shopGoods .goodsInfo .goodsSpec {
  height: 44rpx;
  line-height: 44rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  color: #999;
  font-size: 28rpx;
  position: relative;
  padding-right: 42rpx;
  padding-left: 12rpx;
  margin-top: 12rpx;
}
.shopGoods .goodsInfo .goodsSpec text {
  margin-right: 20rpx;
}
.shopGoods .goodsInfo .goodsSpec image {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 18rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.shopGoods .goodsInfo .goodsOperation {
  margin-top: 32rpx;
}
.shopGoods .goodsInfo .goodsOperation .goodsPrice {
  font-size: 20rpx;
  color: #FF2D2D;
}
.shopGoods .goodsInfo .goodsOperation .goodsPrice text {
  font-size: 32rpx;
}
.shopGoods .manufactor {
  width: 418rpx;
}
.shopGoods .manufactor .manufactorName {
  width: 420rpx;
  font-size: 36rpx;
  color: #333333;
}
.shopGoods .manufactor .range {
  color: #28C50F;
  font-size: 28rpx;
  margin: 10rpx 0 26rpx;
}
.shopGoods .manufactor .advantage {
  color: #333;
  font-size: 28rpx;
}
.shopGoods .manufactor .advantage text {
  margin-right: 20rpx;
}
.shopGoods .manufactor .goodsAddr {
  color: #999;
  font-size: 28rpx;
}
.shopGoods .manufactor .goodsAddr text {
  margin-right: 20rpx;
  vertical-align: middle;
}
.shopGoods .manufactor .goodsAddr image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.operation {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.operation .operationBox {
  width: 124rpx;
  height: 260rpx;
  background: #ff2d2d;
  text-align: center;
  line-height: 240rpx;
  color: #fff;
  font-size: 28rpx;
}
.operation .operationDel {
  background-color: #FD9E9E;
}


page {
  background-color: #F5F5F5;
}
.searchHeader {
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.searchHeader .search {
  width: 540rpx;
  height: 64rpx;
  background: #ffffff;
  border: 2rpx solid #ff2d2d;
  border-radius: 34rpx;
  position: relative;
  overflow: hidden;
}
.searchHeader .search image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 12rpx;
}
.searchHeader .search input {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-left: 80rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.searchHeader .searchBtn {
  width: 120rpx;
  height: 64rpx;
  background: linear-gradient(61deg, #ff8d4d 0%, #ee2b00 100%);
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 64rpx;
  text-align: center;
}
.goodsList {
  background-color: #fff;
}
.goodsItem {
  padding: 20rpx 30rpx;
  justify-content: flex-start;
}
.goodsItem .goodsSelect {
  width: 32rpx;
  height: 32rpx;
}
.goodsItem .goodsContent {
  justify-content: flex-start;
  margin-left: 20rpx;
}
.goodsItem .goodsContent .goodsImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.goodsItem .goodsContent .goodsName {
  color: #333;
  font-size: 36rpx;
  max-width: 450rpx;
}
.confirmBtn {
  position: fixed;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 40rpx;
  width: 650rpx;
  height: 88rpx;
  opacity: 1;
  background: #FF2D2D;
  border-radius: 54rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
}


.browseGoods {
  padding: 20rpx 50rpx;
  width: 100%;
  height: 170rpx;
  display: flex;
}
.browseGoods .goodsImg {
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.browseGoods .goodsInfo {
  flex-shrink: 0;
  width: 500rpx;
}
.browseGoods .goodsInfo .goodsName {
  width: 500rpx;
  font-size: 28rpx;
  color: #333;
}
.browseGoods .goodsInfo .goodsName text {
  width: 56rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #ff2d2d;
  border-radius: 8rpx;
  color: #fff;
  font-size: 20rpx;
  margin-right: 12rpx;
  display: inline-block;
  text-align: center;
}
.browseGoods .goodsInfo .advantage {
  font-size: 24rpx;
  color: #999;
  margin-top: 26rpx;
}
.browseGoods .goodsInfo .advantage text {
  margin-right: 20rpx;
}
.browseGoods .goodsInfo .goodsBtm {
  width: 100%;
}
.browseGoods .goodsInfo .goodsBtm .price {
  font-size: 20rpx;
  color: #FF2D2D;
}
.browseGoods .goodsInfo .goodsBtm .price text {
  font-size: 32rpx;
}
.browseGoods .goodsInfo .goodsBtm .more {
  font-size: 28rpx;
  color: #333;
}
.browseGoods .goodsInfo .goodsBtm .more image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}
.similar {
  background-color: #EBEBEB;
  overflow: hidden;
  height: 0;
}
.similar .scrollView {
  display: flex;
  height: 220rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.similar .scrollView .similarGoods {
  width: 136rpx;
  height: 180rpx;
  background: #ffffff;
  border-radius: 4rpx;
  margin-right: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.similar .scrollView .similarGoods:last-child {
  margin-right: 0;
}
.similar .scrollView .similarGoods .similarGoodsImg {
  width: 136rpx;
  height: 120rpx;
  position: relative;
  overflow: hidden;
}
.similar .scrollView .similarGoods .similarGoodsImg .goodsPrice {
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  line-height: 28rpx;
  padding: 4rpx 6rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 14rpx;
  text-align: center;
}
.similar .scrollView .similarGoods .similarGoodsImg .goodsPrice text {
  font-size: 20rpx;
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.similar .scrollView .similarGoods .similarGoodsDetail {
  background-color: #fff;
  padding: 8rpx;
}
.similar .scrollView .similarGoods .similarGoodsDetail .similarGoodsName {
  font-size: 20rpx;
  color: #333;
  width: 120rpx;
  height: 60rpx;
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}


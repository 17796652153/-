page {
  background-color: #f5f5f5;
}
.followItem {
  padding: 0 50rpx;
  height: 100rpx;
  background-color: #fff;
}
.followItem .followUser {
  display: flex;
  align-items: center;
}
.followItem .followUser image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.followItem .followUser text {
  font-size: 28rpx;
  color: #333;
  max-width: 240rpx;
}
.followItem .followEdit {
  padding: 8rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #E5E5E5;
  border-radius: 22px;
}
.followItem .cancelFollow {
  background-color: #FF2D2D;
  color: #fff;
}


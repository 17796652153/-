.bgImg {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.content {
  width: 630rpx;
  height: 728rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin: 124rpx auto 160rpx;
  text-align: center;
  padding-top: 1rpx;
}
.content .title {
  font-size: 44rpx;
  color: #333;
  margin: 44rpx auto 30rpx;
}
.content .scanningImg {
  width: 400rpx;
  height: 400rpx;
  opacity: 1;
  background-color: #FF8165;
  border-radius: 20rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .couponCode {
  font-size: 44rpx;
  color: #333;
  margin: 40rpx auto 32rpx;
}
.content .tips {
  color: #999;
  font-size: 28rpx;
  margin: 0 auto 20rpx;
}
.saveImg {
  width: 400rpx;
  height: 100rpx;
  background: linear-gradient(287deg, #ff3e32 0%, #fb822a);
  border-radius: 55rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  color: #fff;
  margin: 80rpx auto;
}
.canvas {
  width: 200px;
  height: 200px;

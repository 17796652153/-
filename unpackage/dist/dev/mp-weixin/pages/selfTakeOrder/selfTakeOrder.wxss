.headNavigation {
  width: 750rpx;
  height: 92rpx;
  opacity: 1;
  background: #FFEBEB;
  display: flex;
}
.navItem {
  width: 50%;
  text-align: center;
  line-height: 92rpx;
  color: #999;
  font-size: 32rpx;
  position: relative;
}
.activeNav {
  color: #FF2D2D;
}
.activeNav::after {
  content: "";
  width: 32rpx;
  height: 8rpx;
  opacity: 1;
  background: #FF2D2D;
  border-radius: 12rpx;
  position: absolute;
  left: 50%;
  bottom: 8rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.selfTakeMain {
  padding: 20rpx 30rpx;
}
.selfTakeMain .shopName {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 16rpx;
}
.orderGoods {
  display: flex;
  align-items: center;
}
.orderGoods .goodsImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.orderGoods .goodsInfo {
  width: 450rpx;
}
.orderGoods .goodsInfo .goodsName {
  width: 450rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
}
.orderGoods .goodsInfo .goodsSpec {
  height: 44rpx;
  line-height: 44rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  color: #999;
  font-size: 28rpx;
  position: relative;
  padding-right: 42rpx;
  padding-left: 12rpx;
  margin-top: 12rpx;
}
.orderGoods .goodsInfo .goodsSpec text {
  margin-right: 20rpx;
}
.orderGoods .goodsInfo .goodsSpec image {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 18rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.orderGoods .goodsInfo .goodsOperation {
  margin-top: 32rpx;
}
.orderGoods .goodsInfo .goodsOperation .goodsPrice {
  font-size: 20rpx;
  color: #FF2D2D;
}
.orderGoods .goodsInfo .goodsOperation .goodsPrice text {
  font-size: 32rpx;
}
.orderGoods .goodsInfo .goodsOperation .operationBtn {
  color: #FF2D2D;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  background: #ffe3e3;
  border-radius: 30rpx;
  display: none;
}
.orderGoods .goodsInfo .goodsOperation .operationBtn:last-child {
  display: block;
}
.orderGoods .goodsInfo .goodsOperation .over {
  background-color: #E5E5E5;
  color: #999;
}


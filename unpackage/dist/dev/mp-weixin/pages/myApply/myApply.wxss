.showCategory {
  width: 750rpx;
  background: #ffebeb;
  padding: 30rpx 50rpx;
  font-size: 32rpx;
  color: #FF2D2D;
  position: relative;
  z-index: 9;
}
.showCategory image {
  width: 24rpx;
  height: 24rpx;
  transition: all 0.3s;
}
.moreCategory {
  position: absolute;
  top: 92rpx;
  left: 0;
  z-index: 1;
  width: 100%;
  background-color: #FFEBEB;
  opacity: 1;
  transition: all 0.6s;
}
.moreTransform {
  -webkit-transform: translateY(-400rpx);
          transform: translateY(-400rpx);
  opacity: 0;
}
.rotateTransform {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.moreCategory .moreItem {
  color: #FF2D2D;
  font-size: 32rpx;
  padding: 30rpx 50rpx;
  transition: all 0.3s;
}
.moreCategory .activeMore {
  background-color: #fff;
  padding-left: 60rpx;
  transition: all 0.3s;
}
.headNavigation {
  width: 750rpx;
  height: 92rpx;
  opacity: 1;
  display: flex;
}
.navItem {
  width: 50%;
  text-align: center;
  line-height: 92rpx;
  color: #999;
  font-size: 32rpx;
  position: relative;
}
.activeNav {
  color: #FF2D2D;
}
.activeNav::after {
  content: "";
  width: 32rpx;
  height: 8rpx;
  opacity: 1;
  background: #FF2D2D;
  border-radius: 12rpx;
  position: absolute;
  left: 50%;
  bottom: 8rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.applyStatus {
  padding: 40rpx 30rpx;
}
.applyStatus .applyItem {
  width: 690rpx;
  min-height: 140rpx;
  background: #ffffff;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  position: relative;
  padding: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}
.applyStatus .applyItem .applyTitle {
  font-size: 32rpx;
  color: #333;
}
.applyStatus .applyItem .statusBtn {
  line-height: 28rpx;
  padding: 10rpx 20rpx;
  background: #dbfbff;
  border-radius: 30rpx;
  text-align: center;
  color: #0FD0EB;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  top: 72rpx;
}
.applyStatus .applyItem::after {
  content: "";
  position: absolute;
  left: -164rpx;
  top: -92rpx;
  width: 236rpx;
  height: 168rpx;
  background: #11d8f3;
  -webkit-filter: blur(150rpx);
          filter: blur(150rpx);
}
.applyStatus .fail {
  padding-bottom: 25rpx;
}
.applyStatus .fail .statusBtn {
  background-color: #FFE3E3;
  color: #FF2D2D;
}
.applyStatus .fail .refuse {
  margin-top: 88rpx;
}
.applyStatus .fail .refuse .refuseTitle {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.applyStatus .fail .refuse .reason {
  color: #FF2D2D;
  font-size: 24rpx;
  overflow: hidden;
}
.applyStatus .fail .refuse .moreImg {
  width: 100%;
  text-align: center;
}
.applyStatus .fail .refuse .moreImg image {
  margin-top: 20rpx;
  width: 24rpx;
  height: 24rpx;
  margin: 0 auto;
}
.applyStatus .fail::after {
  content: "";
  background: #FF2D2D;
}
.applyStatus .success .statusBtn {
  background-color: #D8FFD8;
  color: #04B901;
}
.applyStatus .success::after {
  content: "";
  background: #05E500;
}
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
}
.model {
  position: fixed;
  left: 50%;
  top: 40%;
  z-index: 999;
  -webkit-transform: translateX(-50%) translateY(-40%);
          transform: translateX(-50%) translateY(-40%);
  width: 488rpx;
  background: #ffffff;
  border-radius: 10rpx;
}
.model .title {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx;
}
.model .content {
  margin-left: 20rpx;
  width: 448rpx;
  height: 56rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 35rpx;
  position: relative;
  font-size: 24rpx;
}
.model .content .selPicker {
  display: inline-block;
  height: 100%;
  width: 100%;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}
.model .content image {
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  width: 24rpx;
  height: 24rpx;
}
.model .operation {
  height: 80rpx;
  width: 100%;
  border-top: 2rpx solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.model .operation view {
  flex: 1;
  font-size: 32rpx;
  text-align: center;
}
.model .operation .cancel {
  color: #999999;
}
.model .operation .confirm {
  color: #FF2D2D;
}


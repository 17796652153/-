page {
  background-color: #f5f5f5;
}
.refundBox {
  background-color: #fff;
  width: 100%;
  margin-bottom: 20rpx;
  min-height: 750rpx;
}
.refundBox .refundReject {
  padding: 20rpx 30rpx;
}
.refundBox .refundReject .title {
  color: #666;
  margin-right: 40rpx;
}
.refundBox .refundReject .content {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.tips {
  color: #999;
  font-size: 26rpx;
  padding: 20rpx;
  display: flex;
}
.tips view {
  color: #58caff;
  position: relative;
}
.tips view button {
  position: absolute;
  left: 0;
  top: 0;
  width: 110rpx !important;
  height: 36rpx !important;
  opacity: 0;
}


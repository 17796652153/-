page {
  background-color: #f5f5f5;
}
.headNavigation {
  width: 750rpx;
  height: 92rpx;
  opacity: 1;
  background: #FFEBEB;
  display: flex;
}
.navItem {
  width: 50%;
  text-align: center;
  line-height: 92rpx;
  color: #999;
  font-size: 32rpx;
  position: relative;
}
.activeNav {
  color: #FF2D2D;
}
.activeNav::after {
  content: "";
  width: 32rpx;
  height: 8rpx;
  opacity: 1;
  background: #FF2D2D;
  border-radius: 12rpx;
  position: absolute;
  left: 50%;
  bottom: 8rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.shopFollow {
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.shopDetail {
  display: flex;
  align-items: center;
}
.shopDetail .shopImg {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.shopDetail .shopInfo .shopName {
  color: #333;
  font-size: 32rpx;
}
.shopDetail .shopInfo .shopActivity {
  color: #999;
  font-size: 24rpx;
}
.shopMore {
  width: 28rpx;
  height: 28rpx;
}
.btmGoods {
  display: flex;
  margin-top: 20rpx;
}
.btmGoods .goodsImg {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}
.btmGoods .goodsImg text {
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  width: 80rpx;
  height: 28rpx;
  line-height: 28rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  border-radius: 14rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}
.btmGoods .goodsInfo {
  flex-shrink: 0;
}
.btmGoods .goodsInfo .goodsName {
  color: #333;
  font-size: 28rpx;
  height: 80rpx;
  width: 470rpx;
}
.btmGoods .goodsInfo .goodsName text {
  width: 56rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  background: #ff2d2d;
  border-radius: 8rpx;
  color: #fff;
  font-size: 20rpx;
  margin-right: 10rpx;
}
.btmGoods .goodsInfo .goodsStatus {
  color: #999;
  font-size: 24rpx;
  margin: 10rpx 0 38rpx;
}
.btmGoods .goodsInfo .goodsPrice {
  color: #FF2D2D;
  font-size: 24rpx;
}
.btmGoods .goodsInfo .goodsPrice text {
  font-size: 32rpx;
}
.goodsContent {
  padding: 20rpx 30rpx 40rpx;
  width: 750rpx;
  flex-shrink: 0;
  background-color: #fff;
}
.shopGoods {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.shopGoods .goodsImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.shopGoods .manufactor {
  width: 418rpx;
}
.shopGoods .manufactor .manufactorName {
  width: 420rpx;
  font-size: 36rpx;
  color: #333333;
}
.shopGoods .manufactor .range {
  color: #28C50F;
  font-size: 28rpx;
  margin: 10rpx 0 26rpx;
}
.shopGoods .manufactor .advantage {
  color: #333;
  font-size: 28rpx;
}
.shopGoods .manufactor .advantage text {
  margin-right: 20rpx;
}
.shopGoods .manufactor .goodsAddr {
  color: #999;
  font-size: 28rpx;
}
.shopGoods .manufactor .goodsAddr text {
  margin-right: 20rpx;
  vertical-align: middle;
}
.shopGoods .manufactor .goodsAddr image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.goTop {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 5%;
  right: 4%;
}


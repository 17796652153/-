.searchHeader {
  padding: 20rpx 30rpx;
}
.searchHeader .search {
  width: 540rpx;
  height: 64rpx;
  background: #ffffff;
  border: 2rpx solid #ff2d2d;
  border-radius: 34rpx;
  position: relative;
  overflow: hidden;
}
.searchHeader .search image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 12rpx;
}
.searchHeader .search input {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-left: 80rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.searchHeader .searchBtn {
  width: 120rpx;
  height: 64rpx;
  background: linear-gradient(61deg, #ff8d4d 0%, #ee2b00 100%);
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 64rpx;
  text-align: center;
}
.screen {
  display: flex;
  align-items: center;
}
.screen .screenItem {
  flex: 1;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #999;
  position: relative;
  margin-bottom: 20rpx;
}
.screen .screenItem .activeScreen {
  color: #FF2D2D;
}
.screen .screenItem .activeScreen::after {
  content: "";
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 100rpx;
  height: 4rpx;
  background: #ff2d2d;
  border-radius: 2rpx;
}
.goodsList {
  padding: 0 30rpx;
}
.goodsList .goodsItem {
  border-top: 4rpx solid #EBEBEB;
  padding-bottom: 40rpx;
}
.goodsList .goodsItem .shopName {
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
}
.goodsList .goodsItem .goodsMain {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goodsList .goodsItem .goodsMain .goodsImg {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  margin-right: 20rpx;
}
.goodsList .goodsItem .goodsMain .goodsImg text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 124rpx;
  height: 32rpx;
  background: #ff2d2d;
  border-radius: 0rpx 20rpx 0rpx 0rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 32rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight {
  width: 430rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop {
  display: flex;
  justify-content: space-between;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .goodsTitle {
  width: 328rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .goodsTitle .content {
  height: 76rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #333;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .goodsTitle .content .seckillBtn {
  display: inline-block;
  width: 56rpx;
  height: 28rpx;
  background: #ff2d2d;
  border-radius: 8rpx;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  font-size: 20rpx;
  margin-right: 10rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .praise {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .praise image {
  width: 36rpx;
  height: 36rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsRightTop .praise text {
  font-size: 20rpx;
  color: #FF2D2D;
}
.goodsList .goodsItem .goodsMain .goodsRight .ensure {
  font-size: 24rpx;
  color: #04B901;
  margin: 14rpx 0 34rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsNum {
  margin-bottom: 12rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsNum .originalPrice,
.goodsList .goodsItem .goodsMain .goodsRight .goodsNum .goodsLimit {
  color: #666;
  font-size: 20rpx;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsPrice .price {
  font-size: 22rpx;
  color: #333;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsPrice .price text {
  font-size: 34rpx;
  color: #FF2D2D;
}
.goodsList .goodsItem .goodsMain .goodsRight .goodsPrice .addCar {
  width: 192rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #2d8dff;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
}
.goodsNull {
  color: #999;
  text-align: center;
  margin: 40rpx auto;
}

